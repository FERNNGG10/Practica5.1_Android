<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_carga"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:background="@color/black"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="casual"
                android:text="Juego del gato"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp"></TextView>
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/c5"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        android:background="@drawable/cuadro"
        app:backgroundTint="@null"></Button>

    <Button
        android:id="@+id/c6"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/c5"
        android:background="@drawable/cuadro"
        app:backgroundTint="@null"></Button>

    <Button
        android:id="@+id/c4"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/c5"
        app:backgroundTint="@null"
        android:background="@drawable/cuadro"
        >
    </Button>

    <Button
        android:id="@+id/c1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_above="@+id/c6"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/c2"
        android:background="@drawable/cuadro"
        app:backgroundTint="@null"></Button>

    <Button
        android:id="@+id/c2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_above="@+id/c5"
        android:layout_centerInParent="true"
        android:background="@drawable/cuadro"
        app:backgroundTint="@null"></Button>

    <Button
        android:id="@+id/c3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_above="@+id/c6"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/c2"
        android:background="@drawable/cuadro"
        app:backgroundTint="@null"></Button>

    <Button
        android:id="@+id/c7"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/c4"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/c8"
        android:background="@drawable/cuadro"
        app:backgroundTint="@null"></Button>

    <Button
        android:id="@+id/c8"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/c5"
        android:layout_centerInParent="true"
        android:background="@drawable/cuadro"
        app:backgroundTint="@null"></Button>

    <Button
        android:id="@+id/c9"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/c6"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/c8"
        android:background="@drawable/cuadro"
        app:backgroundTint="@null"></Button>


</RelativeLayout>